{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../../dist/packages/demo-app",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": false,
    "baseUrl": "",
    "typeRoots": [
      "../../node_modules/@types/!(node)"
    ],
    "paths": {
      "@angular/material": [
        "../../dist/packages/material"
      ]
    }
  },
  "files": [
    "./demo-app-types.d.ts",
    "./demo-app-module.ts",
    "./system-config.ts",
    "./main.ts"
  ]
}
